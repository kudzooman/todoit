<h1>Todo Lists</h1>

<%= link_to "New List", new_list_path, class: 'btn btn-danger btn-lg btn-save' %><br>

<div class="table table-striped table-bordered table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>List Name</th>
      </tr>
    </thead>
    <tbody>
      <% @lists.each do |list| %>
      <tr>
        <td><%= link_to list.name, list %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>