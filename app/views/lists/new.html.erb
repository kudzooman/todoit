<h1>Create New List</h1>

  <div class="col-md-8">
    <%= form_for @list do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter list name" %>
      </div>

      <%= f.submit "Save", class: 'btn btn-danger btn-lg btn-save' %>
      <% end %>
  </div>
