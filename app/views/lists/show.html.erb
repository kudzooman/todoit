<h1><%= @list.name %></h1>
<%= link_to "Todo Lists", lists_path, class: 'btn btn-success btn-lg btn-save' %>
<%= link_to "Edit List", edit_list_path, class: 'btn btn-success btn-lg btn-save' %>
<%= link_to "Delete List", @lists, method: :delete, class: 'btn btn-success btn-lg btn-save' %>
<div class="table table-striped table-bordered table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>ToDo</th>
        <th>Days Left</th>
        <th>Complete</th>
      </tr>
    </thead>
    <tbody>
      <% @list.todos.each do |todo| %>
        <tr>
          <td><%= todo.item %>  <%= link_to "Edit", @todo, class: 'btn btn-success btn-sm btn-todo' %></td>
          <td>7</td>
          <td><%= link_to "Complete", @todo, method: :delete, class: 'btn btn-success btn-sm btn-todo' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render partial: 'todos/form', locals: { list: @list, todo: @todo } %>
</div>