<h1><%= @list.name %></h1>
<div class="table table-striped table-bordered table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>ToDo</th>
        <th>Days Left</th>
        <th>Complete</th>
      </tr>
    </thead>
    <tbody>
      <% @list.todos.each do |todo| %>
        <tr>
          <td><%= todo.item %></td>
          <td>7</td>
          <td><%= link_to "Complete", todo_url_helper(todo), method: :delete, remote: true %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>